<!--pages/detail/detail.wxml-->
<view class="page">


  <swiper indicator-dots="true" indicator-active-color='white' autoplay='true'>


    <swiper-item wx:for='{{carousel}}'>
      <image src="{{item.url}}" mode='aspectFit' style='width:100%;height:100%'></image>
    </swiper-item>

  </swiper>

  <view class="van-panel van-hairline--bottom custom-class" style="width:100%;display:block;margin-bottom:35rpx;">
    <van-cell value="" border="false" center="true" custom-class="header-class" value-class="van-panel__header-value">
      <view slot="title">
        <van-tag type="danger" color="#1173bc" style="margin-right:10rpx">出售</van-tag>
        <span class="van-cell-text">{{ detail.title }}</span>

      </view>
    </van-cell>


    <view class="van-panel__footer2 van-hairline--bottom footer-class" style="display:flex;justify-content:space-between;align-items:center;font-size:26rpx;color:#20262e;margin:15rpx 0" bindtap="goto">
      <view style='color:#1173bc;font-size:36rpx'>{{detail.NewPrice}}</view>
      <view style='display:flex;align-items:center;color:#5b5a5a'>
        <i-icon type="coordinates" size="22" />
        <view>{{detail.place}}</view>
      </view>
      <view style='color:#ccc'>1分钟前</view>
    </view>

    <view class="van-panel__content" bindtap="goto">
      <slot />
      <view style='display:flex;flex-wrap:wrap;'>
        <view style="display:flex;font-size:26rpx;width:100%;color:#565455;padding:10rpx 30rpx 20rpx 30rpx;min-height:220rpx;">{{detail.description}}</view>
      </view>
    </view>

    <view class="van-panel__footer2 van-hairline--top footer-class" style="display:flex;justify-content:space-between;align-items:center;font-size:26rpx;color:#20262e" bindtap="goto">
      <view style='color:#5b5a5a;font-size:28rpx'>
        <i-icon type="mine" size="22" />{{detail.userid}}</view>
      <view style='display:flex;align-items:center;color:#5b5a5a'>
        <view>{{detail.contact}}</view>
      </view>
      <view style='margin:15rpx 0'>
        <van-button size="small" type="danger" color="#1173bc">复制</van-button>
      </view>
    </view>
  </view>


  <view class="page__bd" style='margin-top:20rpx'>



  </view>




  <van-goods-action style="display:flex">
    <van-goods-action-icon icon="like-o" text="收藏" bind:click="onClickIcon" />


    <van-button type="white" bind:click="onClickButton" size="large" style='flex-grow:1' square>已售出此商品</van-button>
    <van-button type="share" bind:click="onClickButton" size="large" style='width:20%' square>分享</van-button>
  </van-goods-action>
</view>