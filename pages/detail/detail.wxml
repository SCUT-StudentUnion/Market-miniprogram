<!--pages/detail/detail.wxml-->
<view class="page">
  <view class="weui-cells weui-cells_after-title" style='margin-top:10rpx;'>
    <view class="weui-cell">
      <view class='badge'>体育用品</view>
      <view class="weui-cell__bd title">{{detail.title}}</view>
      <view class="weui-cell__ft">{{detail.isCollected}}</view>
    </view>
  </view>


  <view class="page__bd" style='margin-top:20rpx'>

    <view class="weui-form-preview">
      <view class="weui-form-preview__hd">
        <view class="weui-form-preview__item">
        <view class='inline'>
          <view class="weui-form-preview__label ">详细信息</view>
          </view>
          <view class='inline'>
          <image src='/images/psb.webp' style='width:200rpx;height:200rpx;margin-right:30rpx'></image>
          <image src='/images/psb2.jpeg' style='width:200rpx;height:200rpx;margin-right:30rpx'></image>
          <image src='/images/psb3.jpg' style='width:200rpx;height:200rpx;margin-right:30rpx'></image>
          </view>
        </view>
      </view>
      <view class="weui-form-preview__bd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">具体描述</view>
          <view class="weui-form-preview__value">{{detail.description}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">入手价格</view>
          <view class="weui-form-preview__value">{{detail.OldPrice}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">售出价格</view>
          <view class="weui-form-preview__value">{{detail.NewPrice}}</view>
        </view>
         <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">发布ID</view>
          <view class="weui-form-preview__value">{{detail.wxid}}</view>
        </view>
         <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">联系方式</view>
          <view class="weui-form-preview__value">{{detail.contact}}</view>
        </view>
      </view>
      <view class="weui-form-preview__ft">
        <navigator url="" class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">复制微信号</navigator>
      </view>
    </view>

  </view>

</view>