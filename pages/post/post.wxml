<van-cell-group>
  <van-cell data-name="{{ item }}" style="display:inline-flex;width:100%">
    <view slot="title" style="display:flex;justify-content:space-around">
      <van-checkbox-group value="{{ result }}" bind:change="onChange" style="display:inline-flex;justify-content:space-around;flex-basis:60%" max="2">
        <van-checkbox wx:for="{{ list }}" wx:key="{{ index }}" name="{{ item }}">
          <view> {{ item }}</view>
        </van-checkbox>
      </van-checkbox-group>
    </view>
  </van-cell>

  <van-field value="{{ username }}" clearable label="标题" placeholder="给你的商品起个好名字吧" bind:click-icon="onClickIcon" placeholder-style="placeholder" />

  <van-cell title="分类" value="电子产品" is-link bindtap='PopShow' />

  <van-cell title="添加图片" />
  <van-cell>
    <view slot="title" style='display:flex'>

      <image src='/images/upload.png' style='width:60px;height:60px' mode='aspectFill' bindtap='upimg'></image>
      <scroll-view  style='display:flex;justify-content:space-around'>
        <image wx:for="{{img}}" src='{{item}}' style='width:60px;height:60px' mode='aspectFill' bindtap='askdel'></image>
      </scroll-view>
    </view>
  </van-cell>

  <van-cell title="所在校区" value="大学城校区" is-link bindtap='PopShow' />
<van-cell title="商品描述"  />



  <van-field
  wx:if="{{ShowTextarea}}"
    value="{{ message }}"
    input-class="MinHeight"
    type="textarea"
    placeholder="多些描述，别人更加了解你的商品"
    autosize
    border="true"
  />


  <van-field  value="{{ username }}" clearable label="价格" placeholder="给一个合适的价格吧" bind:click-icon="onClickIcon" placeholder-style="placeholder" />
    <van-field value="{{ username }}" clearable label="联系方式" placeholder="方便你们进一步沟通，支付价款" bind:click-icon="onClickIcon" placeholder-style="placeholder" />
</van-cell-group>


<van-popup  show="{{show}}" bind:close="onClose" custom-class="pop" bind:click-overlay="ClosePop">
  <van-cell-group>
    <van-cell data-name="{{ item }}" style="display:inline-flex;width:100%" islink>
      <view slot="title" style="display:flex;">
        分类
      </view>
    </van-cell>
    <van-cell title="电子产品" clickable />
    <van-cell title="水产养殖" clickable />
    <van-cell title="稀有金属" clickable />
    <van-cell title="战术核弹" clickable />
  </van-cell-group>
</van-popup>


